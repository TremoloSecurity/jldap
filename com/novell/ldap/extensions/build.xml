<!-- ======================================================================= -->
<!-- COM.NOVELL.LDAP.EXT build file                                                -->
<!-- ======================================================================= -->
<project name="ext" default="compile" basedir=".">
	<!-- Targets                                                             -->
	<!--     clean   - Cleans all generated class files                      -->
	<!--     compile - Builds debug classes and jar files                    -->
	<!--     all     - Synonym for compile                                   -->

	<property name="top" value="../../../../.."/>
	<property name="ldap" value="ldap"/>
    <property name="build" value="classes_debug"/>
    <property name="lib" value="lib_debug"/>
	<property name="optimize" value="off"/>
	<property name="debug" value="on"/>


    <!-- =================================================================== -->
    <!-- initialization                                                      -->
    <!-- =================================================================== -->
    <target name="init">
        <tstamp/>
    </target>


    <!-- =================================================================== -->
    <!-- clean class files                                                  -->
    <!-- =================================================================== -->
    <target name="clean" depends="init">
		<delete dir="${top}/${build}/com/novell/ldap/ext" includes="*.class"/>
	</target>

    <!-- =================================================================== -->
    <!-- compile java files                                                  -->
    <!-- =================================================================== -->
    <target name="compile" depends="init">
		<mkdir dir="${top}/${build}"/>
        <javac srcdir="${top}/src"
				includes="com/novell/ldap/ext/*.java"
				classpath="${top}/../${ldap}/${lib}/${ldap}.jar"
                destdir="${top}/${build}"
                deprecation="off"
                debug="${debug}"
                optimize="${optimize}">
        </javac>
    </target>

	<target name="all" depends="compile"/>

</project>
