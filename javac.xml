    <!-- =================================================================== -->
    <!-- Initialization                                                      -->
    <!-- =================================================================== -->
    <target name="init">
        <tstamp/>
		<filter token="COMPILE_DEBUG" value="${DEBUG_VALUE}"/>
    </target>

    <!-- =================================================================== -->
    <!-- build debug classes                                                 -->
    <!-- =================================================================== -->
    <target name="debug" depends="init">

        <echo message="DEBUG compile in com/novell"/>
        <mkdir dir="${build.debug}"/>
        <copy
        		file="com/novell/ldap/client/Debug.template"
        		tofile="com/novell/ldap/client/Debug.java"
        		overwrite="YES"
        		filtering="YES"
        />
        <javac
                srcdir="."
                includes="com/novell/**/*.java"
                destdir="${build.debug}"
                target="1.1"
                deprecation="off"
                debug="on"
                optimize="off">
                <classpath>
                	<pathelement location="external/ssl/domestic/nssl1.1_dom.jar"/>
                </classpath>
        </javac>

        <echo message="Creating DEBUG ${lib.debug}/${ldap}.jar file"/>
        <mkdir dir="${lib.debug}"/>
        <jar
            jarfile="${lib.debug}/${ldap}.jar"
            basedir="${build.debug}"
        />
    </target>

    <!-- =================================================================== -->
    <!-- build release classes                                               -->
    <!-- =================================================================== -->
    <target name="release" depends="init">

        <echo message="RELEASE compile in com/novell"/>
        <mkdir dir="${build}"/>
        <delete file="com/novell/ldap/client/Debug.java"/>
        <copy
        	file="com/novell/ldap/client/Debug.template"
        	tofile="com/novell/ldap/client/Debug.java"
        	filtering="YES"
			overwrite="YES"
        />
        <javac 
                srcdir="."
                includes="com/novell/**/*.java"
                destdir="${build}"
                target="1.1"
                deprecation="off"
                debug="off"
                optimize="on">
                <classpath>
                	<pathelement location="external/ssl/domestic/nssl1.1_dom.jar"/>
                </classpath>
        </javac>

        <echo message="Creating RELEASE ${lib}/${ldap}.jar file"/>
        <mkdir dir="${lib}"/>
        <jar jarfile="${lib}/${ldap}.jar"
            basedir="${build}"
        />
    </target>

</project>
